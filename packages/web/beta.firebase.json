{
  "hosting": [
    {
      "site": "sentrei-beta",
      "appAssociation": "AUTO",
      "public": "public",
      "ignore": ["**/static/**"],
      "target": "web",
      "rewrites": [
        {
          "source": "**",
          "run": {
            "serviceId": "sentrei-beta-web",
            "region": "us-central1"
          }
        }
      ],
      "headers": [
        {
          "source": "**/*.html",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "max-"
            }
          ]
        },
        {
          "source": "**/*.@(css|js|json)",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "max-age=604800"
            }
          ]
        },
        {
          "source": "**/*.@(jpg|jpeg|gif|png|svg|webp|eot|otf|ttf|ttc|woff|woff2|font.css)",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "max-age=604800"
            }
          ]
        }
      ]
    }
  ]
}
